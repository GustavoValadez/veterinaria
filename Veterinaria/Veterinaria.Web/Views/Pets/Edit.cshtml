                <div class="form-group">
                    <label class="control-label col-md-2"><b>Fotografía</b></label>
                    <div class="col-md-10">
                        <input type="file" name="hpb" value="" class="form-control" />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />

                        <a href="@Url.Action("Index","Pets")" class="btn btn-outline-success">Regresar</a>
                    </div>
                </div>
            </div>

        }

        @*<div>
            @Html.ActionLink("Regresar", "Index")

        </div>*@



    </div>
    <div class="card-footer text-muted text-center text-white bg-success">
        MedVet
    </div>
</div>





