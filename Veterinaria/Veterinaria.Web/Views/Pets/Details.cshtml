@model Veterinaria.Web.Models.Pet

@{
    ViewBag.Title = "Detalles";
}

<div class="row">
    <div class="col-md-12">

    </div>

</div>

<div class="row col-md=12 justify-content-center">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header py-2 bg-success">
                <h5 class="text-center m-0 text-white">@Model.Name</h5>
            </div>
            <div class="card-body">
                <table class="table-sm">

                    <tr>
                        <td><b>Nombre:</b></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td><b>Tipo de Mascota:</b></td>
                        <td>@Model.PetType</td>
                    </tr>
                    <tr>
                        <td><b>Edad:</b></td>
                        <td>@Model.Age Meses</td>
                    </tr>
                    <tr>
                        <td><b>Fecha de Nacimiento:</b></td>
                        <td>@Model.BirthDate.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td><b>Color:</b></td>
                        <td>@Model.Color</td>
                    </tr>
                    <tr>
                        <td><b>Raza:</b></td>
                        <td>@Model.Race</td>
                    </tr>
                    <tr>
                        <td><b>Peso:</b></td>
                        <td>@Model.Weight</td>
                    </tr>
                    <tr>
                        <td><b>Altura:</b></td>
                        <td>@Model.Height</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="">
            <div class="card mb-3">
                <div class="card-header bg-success">
                    <h6 class="text-center text-white">Fotografía</h6>
                </div>
                <div class="card-header">
                    @if (Model.ImgUrl == null)
                    {
                        <img src="~/Content/img/user-unknown.jpg" class="img-thumbnail" width="550" />
                    }
                    else if (Model.ImgUrl != null)
                    {
                        <img src="~/Content/img/@Model.ImgUrl" class="img-thumbnail" width="550" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<p>
    @*@Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |*@
    @*@Html.ActionLink("Regresar", "Index")*@

    <a href="@Url.Action("Edit","Pets", new { id = Model.Id })" class="btn btn-success">Editar</a>
    <a href="@Url.Action("Index","Pets")" class="btn btn-outline-success">Regresar</a>
</p>





